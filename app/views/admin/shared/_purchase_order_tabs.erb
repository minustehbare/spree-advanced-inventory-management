<h1><%= t(:purchase_order) + " #{@purchase_order.number}" %></h1>

<% content_for :sidebar do %>
  <div id="order_tab_summary">
    <h3 id="order_number"><%= t(:purchase_order) + " ##{@purchase_order.number} " %></h3>
    <h5 id="order_status">Status: <%= t(@purchase_order.state) %></h5>
    <h5 id="order_total">Total: <%= number_to_currency(@purchase_order.total) %></h5>
    <br class="clear" />
  </div>
  <br class="clear" />

  <ul class="sidebar">

      <% if @purchase_order.state == "in_progress" %>
        <li <%= ' class="active"' if current == "Order Details" %>>
          <%= link_to t("order_details"), edit_admin_order_url(@purchase_order) %>
        </li>
        <li <%= ' class="active"' if current == "Customer Details" %>>
            <%= link_to t("customer_details"), edit_admin_order_checkout_url(@purchase_order) %>
        </li>
        <li <%= ' class="active"' if current == "Shipments" %>>
           <%= link_to t("shipment"), @purchase_order.purchase_line_items.empty? || !@purchase_order.checkout.valid? ? "javascript:$('form').submit();" : edit_admin_order_shipment_url(@purchase_order, @purchase_order.shipment) %>
        </li>
        <li <%= ' class="active"' if current == "Adjustments" %>>
           <%= link_to t("adjustments"), @purchase_order.purchase_line_items.empty? || !@purchase_order.checkout.valid? ? "javascript:$('form').submit();" : admin_order_adjustments_url(@purchase_order) %>
        </li>
        <li <%= ' class="active"' if current == "Payments" %>>
           <%= link_to t("payment"), @purchase_order.purchase_line_items.empty? || !@purchase_order.checkout.valid? ? "javascript:$('form').submit();" : new_admin_order_payment_url(@purchase_order) %>
        </li>

      <% else %>
        <li <%= ' class="active"' if current == "Order Details" %>>
          <%= link_to t("order_details"), admin_order_url(@purchase_order) %>
        </li>
        <li <%= ' class="active"' if current == "Customer Details" %>>
          <%= link_to t("customer_details"), admin_order_checkout_url(@purchase_order) %>
        </li>
        <li <%= ' class="active"' if current == "Adjustments" %>>
           <%= link_to t("adjustments"), admin_order_adjustments_url(@purchase_order) %>
        </li>
        <li <%= ' class="active"' if current == "Payments" %>>
           <%= link_to t("payments"), admin_order_payments_url(@purchase_order) %>
        </li>
        <li <%= ' class="active"' if current == "Shipments" %>>
           <%= link_to t("shipments"), admin_order_shipments_url(@purchase_order) %>
        </li>
        <li <%= ' class="active"' if current == "Return Authorizations" %>>
           <%= link_to t("return_authorizations"), admin_order_return_authorizations_url(@purchase_order) %>
        </li>
        <li <%= ' class="active"' if current == "History" %>>
           <%= link_to t("history"), history_admin_order_url(@purchase_order) %>
        </li>
      <% end %>




  </ul>

<% end %>
